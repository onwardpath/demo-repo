<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>GeoReach</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>userJDBCServlet</servlet-name>
    <servlet-class>com.onwardpath.georeach.controller.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userJDBCServlet</servlet-name>
    <url-pattern>/UserController</url-pattern>
  </servlet-mapping>   
  <servlet>
    <servlet-name>segmentJDBCServlet</servlet-name>
    <servlet-class>com.onwardpath.georeach.controller.SegmentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>segmentJDBCServlet</servlet-name>
    <url-pattern>/SegmentController</url-pattern>
  </servlet-mapping>   
  <servlet>
    <servlet-name>experienceJDBCServlet</servlet-name>
    <servlet-class>com.onwardpath.georeach.controller.ExperienceController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>experienceJDBCServlet</servlet-name>
    <url-pattern>/ExperienceController</url-pattern>
  </servlet-mapping>
  <session-config>
  	<session-timeout>-1</session-timeout>
  </session-config>
</web-app>